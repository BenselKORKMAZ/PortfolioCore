@model List<PortfolioCore.Entities.Feature>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Özellikler Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İş Adı</th>  
        <th>İş Adı</th>
        <th>İş Adı</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>            
            <td>@item.JobTitle1</td>            
            <td>@item.JobTitle2</td>            
            <td>@item.JobTitle3</td>            
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

