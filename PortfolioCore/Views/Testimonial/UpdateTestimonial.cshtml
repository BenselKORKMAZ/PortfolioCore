@model Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Referans GÜncelleme Sayfası</h1>

<form method="post">
    <label>Ad Soyad</label>
    <input type="text" asp-for="NameSurname" class="form-control">
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control">
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="CommentDetail" class="form-control">
    <br />
    <label>Resim Yolu</label>
    <input type="text" asp-for="ImageUrl" class="form-control">
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>