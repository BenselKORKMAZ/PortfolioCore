@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hakkımda Güncelleme Alanı</h1>

<form method="post">
    <input type="hidden" asp-for="AboutId" />
    <label>Ana Başlık</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Hakkımda Yazısı</label>
    <input type="text" class="form-control" asp-for="Description" />
    <br />
    <label>Orta Başlık</label>
    <input type="text" class="form-control" asp-for="Title2" />
    <br />
    <label>Orta Açıklama</label>
    <input type="text" class="form-control" asp-for="Description2" />
    <br />
    <label>Görsel Yolu</label>
    <input type="url" class="form-control" asp-for="ImageUrl" />
    <br />
    <label>Mail Adresi</label>
    <input type="text" class="form-control" asp-for="Mail" />
    <br />
    <label>Telefon Numarası</label>
    <input type="text" class="form-control" asp-for="Phone" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control" asp-for="City" />
    <br />
    <label>Eğitim Seviyesi</label>
    <input type="text" class="form-control" asp-for="Degree" />
    <br />
    <label>Freelance</label>
    <input type="text" class="form-control" asp-for="Freelance" />
    <br />
    <label>Web Site</label>
    <input type="text" class="form-control" asp-for="Linkedln" />
    <br />
    <label>Yaş</label>
    <input type="text" class="form-control" asp-for="Age" />
    <br />
    <label>Doğum Tarihi</label>
    <input type="date" class="form-control" asp-for="Birthday" />
    <br />
    <label>Alt Açıklama Yazısı</label>
    <input type="text" class="form-control" asp-for="SubDescription" />
    <button class="btn btn-outline-info">Güncelle</button>
</form>

